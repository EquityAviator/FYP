{
  "name": "Dark Pattern Hunter",
  "description": "AI-powered browser extension to detect dark patterns and deceptive UI elements using visual AI models.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs",
    "sidePanel",
    "debugger",
    "scripting",
    "downloads",
    "storage"
  ],
  "incognito": "split",
  "background": {
    "service_worker": "scripts/worker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.wasm"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_icon": "icon128.png",
    "default_title": "Dark Pattern Hunter"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/guard-highlighter.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}